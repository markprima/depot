<%= turbo_frame_tag(dom_id(product)) do %>
<% if product.save %>
<tr class="product-highlight">
<% else %>
<tr>
<% end %>
    <li class='flex mb-6'>
        <%= button_to image_tag(product.image_url,
            class: 'object-contain w-40 h-48 shadow mr-6'), line_items_path(product_id: product) %>
                
        <div>
            <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
            <p>
             <%= sanitize(product.description) %>
            </p>    
            <p class="font-bold text-lg bg-blue-100 mb-3">-
             <%= product.kind%> -
            </p><hr>
            <div class="mt-3">
                <%= number_to_currency(product.price) %>

                <%= button_to 'Add to Cart',
                    line_items_path(product_id: product),
                    form_class: 'inline',
                    class: 'ml-4 rounded-lg py-1 px-2
                    text-white bg-blue-600' %>
            </div>
        </div>
    </li>
<% end %>
